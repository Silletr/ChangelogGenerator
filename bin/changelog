mkdir -p bin
cat > bin/changelog << 'EOF'
#!/usr/bin/env python
import sys
from pathlib import Path
sys.path.insert(0, str(Path(__file__).parent.parent / "src"))
from changelog_gen.cli import main
if __name__ == "__main__":
    main()
EOF
chmod +x bin/changelog
export PATH="$PWD/bin:$PATH"
changelog --help
